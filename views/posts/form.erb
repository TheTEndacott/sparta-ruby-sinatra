<form class="" action="/<%= @posts.id %>" method="POST">
  <div class="">
    <label>Title</label>
    <input type="text" name="title" placeholder="Enter a car" value="<%= @posts.title %>">
  </div>

  <div class="">
    <label>Body</label>
    <textarea name="body" placeholder="Enter the details of the car"><%= @posts.body %></textarea>
  </div>

  <div class="">
    <input type="submit" name="" value="Save Post">
  </div>

  <% if(@posts.id != "") %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>

</form>